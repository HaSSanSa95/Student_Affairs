<Window x:Class="aaaaaaa10_6.splashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:aaaaaaa10_6"
        mc:Ignorable="d"
        Title="splashScreen" Height="450" Width="750"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True"
       Background="Transparent"
 ContentRendered="Window_ContentRendered" >

    <materialDesign:Card FlowDirection="RightToLeft" UniformCornerRadius="15" materialDesign:ElevationAssist.Elevation="Dp24" Margin="25">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"></ColumnDefinition>
                <ColumnDefinition Width="400"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30 10 50 0">
                <WrapPanel>
                    <Image Source="pack://application:,,,/Images/logo_academy.png" HorizontalAlignment="Right" Height="60" Width="60" />
                    <Image Source="pack://application:,,,/Images/logo_dep.png" HorizontalAlignment="Right" Height="50" Width="50" />
                    <Image Source="pack://application:,,,/Images/logo.png" HorizontalAlignment="Right" Height="50" Width="50" />
                    <TextBlock Text="برنامج ادارة شؤون الطلبة" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Calibri" Foreground="#FF141414" />
                </WrapPanel>

                <TextBlock Text="جاري التحميل...." FontSize="17" HorizontalAlignment="Left" Margin="0 30 0 15" Foreground="#FF141414" FontFamily="Calibri" />

                <ProgressBar Name="progressBar" Value="0" Height="6" Width="280" IsIndeterminate="False" />
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="320" Width="320">
                <Image Source="pack://application:,,,/Images/qw5.png" />
            </StackPanel>
        </Grid>
    </materialDesign:Card>


</Window>
