<Window x:Class="aaaaaaa10_6.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:local="clr-namespace:aaaaaaa10_6"
mc:Ignorable="d"
Title="splashScreen" Height="450" Width="665"
WindowStyle="None"
WindowStartupLocation="CenterScreen" 
AllowsTransparency="True"
Background="{x:Null}" >

    <materialDesign:Card UniformCornerRadius="15" Background="{DynamicResource MaterialDesign.Brush.Chip.Background}"   Margin="25,25,25,30">
        <Grid FlowDirection="RightToLeft" Margin="0,0,-40,55" Background="{DynamicResource MaterialDesign.Brush.Secondary.Dark.Foreground}">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="750"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="565,263,17,0" Height="60" VerticalAlignment="Top" >
                <WrapPanel Width="350" Height="70">
                    <TextBlock  FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Calibri" />
                    <Image Source="/Images/logo_academy.png" HorizontalAlignment="Right" Height="60" Width="60" />
                    <Image Source="/Images/logo_dep.png" HorizontalAlignment="Right" Height="50" Width="50" />
                    <Image Source="/Images/logo.png" HorizontalAlignment="Right" Height="50" Width="50" />

                </WrapPanel>
            </StackPanel>
            <TextBox x:Name="TxtUserName" Height="50" VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="اسم المستخدم"
    materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"
    MaxLength="40"
    Style="{StaticResource MaterialDesignOutlinedTextBox}"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto" Margin="375,65,130,0" />
            <PasswordBox x:Name="TxtUserPassword" VerticalAlignment="Top" materialDesign:HintAssist.Hint="كلمة المرور"
    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedPasswordBoxEnabledComboBox}" Style="{StaticResource MaterialDesignOutlinedPasswordBox}" Margin="375,130,130,0" Height="50" TabIndex="2" />

            <Label Content="أسم المستخدم :" HorizontalAlignment="Right" Margin="0,80,384,0" VerticalAlignment="Top" Width="131" HorizontalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.572,0.327"/>
            <Label Content="كلمة المرور :" HorizontalAlignment="Left" Margin="230,147,0,0" VerticalAlignment="Top" Width="136" HorizontalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold" FontSize="16" RenderTransformOrigin="0.572,0.327"/>
            <Button x:Name="btnOu1" Content="خروج" HorizontalContentAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Calibri" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
  Style="{StaticResource MaterialDesignPaperLightButton}"
  ToolTip="Resource name: MaterialDesignPaperLightButton" Margin="455,213,150,95" Click="btnOu1_Click" />
            <Button x:Name="btnEnter" Content="دخول" HorizontalContentAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Calibri" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                Style="{StaticResource MaterialDesignPaperLightButton}"
                ToolTip="Resource name: MaterialDesignPaperLightButton" Margin="300,213,305,95" Click="btnEnter_Click" />



        </Grid>


    </materialDesign:Card>
</Window>
