<UserControl x:Class="aaaaaaa10_6.userControl.interview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aaaaaaa10_6.userControl"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1100">
    <Grid Background="{DynamicResource MaterialDesign.Brush.Primary.Dark.Foreground}">

        <Grid Margin="555,0,0,285" Height="530" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="535" Background="{DynamicResource MaterialDesign.Brush.Secondary.Dark.Foreground}">
            <TextBox x:Name="TxtStdDgree"
                VerticalAlignment="Bottom"
                materialDesign:HintAssist.Hint="درجة المقابلة" FlowDirection="RightToLeft" TabIndex="3" 
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="160,0,0,450" FontFamily="Calibri" HorizontalAlignment="Left" Width="125" Text="{Binding Text2, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="TxtStdNumber"
                VerticalAlignment="Bottom" FlowDirection="RightToLeft"
                materialDesign:HintAssist.Hint=" رقم الباج" TabIndex="1"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="415,0,0,450" Text="{Binding Text2, UpdateSourceTrigger=PropertyChanged}" FontFamily="Calibri" HorizontalAlignment="Left" Width="110"/>
            <DatePicker x:Name="DateInterview" TabIndex="2"  FlowDirection="RightToLeft" materialDesign:HintAssist.Hint="تاريخ المقابلة" Style="{StaticResource MaterialDesignOutlinedDatePicker}" Margin="290,0,0,450" HorizontalAlignment="Left" Width="120" Height="50" VerticalAlignment="Bottom" />
            <DatePicker x:Name="DateTest" TabIndex="4"  FlowDirection="RightToLeft" materialDesign:HintAssist.Hint="تاريخ الاختبار" Style="{StaticResource MaterialDesignOutlinedDatePicker}" Margin="25,0,0,450" HorizontalAlignment="Left" Width="130" Height="50" VerticalAlignment="Bottom" />
            <TextBox x:Name="TxtStdDgree_Test"
                VerticalAlignment="Bottom"
                materialDesign:HintAssist.Hint="درجة الاختبار" FlowDirection="RightToLeft" TabIndex="5" 
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="290,0,0,390" FontFamily="Calibri" HorizontalAlignment="Left" Width="235" Text="{Binding Text2, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox x:Name="CobAcceptnace" FlowDirection="RightToLeft"
                materialDesign:HintAssist.Hint="مقبول او غير مقبول"
                materialDesign:TextFieldAssist.HasClearButton="True" TabIndex="6"
                ItemsSource="{Binding ShortStringList}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="24,0,0,390" VerticalAlignment="Bottom" FontFamily="Calibri" HorizontalAlignment="Left" Width="261" SelectedItem="{Binding SelectedValidationOutlined, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button x:Name="BtnEdit" Background="#87CEFA" BorderBrush="#FFFFEEFA" TabIndex="8" FlowDirection="RightToLeft" Foreground="#000000" Margin="210,0,0,285" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="150">
                <WrapPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Edit" Width="25" Height="25" />
                    <TextBlock Text="تعديل البيانات" VerticalAlignment="Center"  FontFamily="Calibri" FontWeight="SemiBold" Margin="10 0" />
                </WrapPanel>
            </Button>



            <Button x:Name="btnSave" Background="#87CEFA" BorderBrush="#FFFFEEFA" TabIndex="7" FlowDirection="RightToLeft" Foreground="#000000" Margin="365,0,0,285" HorizontalAlignment="Left" Width="145" Height="32" VerticalAlignment="Bottom">
                <WrapPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="AddCircle" Width="25" FlowDirection="RightToLeft" Height="25" />
                    <TextBlock Text="حفظ البيانات" VerticalAlignment="Center"  FontFamily="Calibri" FontWeight="SemiBold" Margin="10 0" />
                </WrapPanel>
            </Button>
            <Button x:Name="BtnDelete" Background="#87CEFA" BorderBrush="#FFFFEEFA" TabIndex="8" FlowDirection="RightToLeft" Foreground="#000000" Margin="35,0,0,285" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="170">
                <WrapPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Delete" Width="25" Height="25" />
                    <TextBlock Text="حذف البيانات" VerticalAlignment="Center"  FontFamily="Calibri" FontWeight="SemiBold" Margin="10 0" />
                </WrapPanel>
            </Button>
        </Grid>

        <Grid Margin="0,0,550,0" Height="850" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}">
            <DataGrid HorizontalAlignment="Left" Height="360" Margin="5,20,0,0" VerticalAlignment="Top" Width="535" d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="Calibri"/>


        </Grid>

    </Grid>
</UserControl>
